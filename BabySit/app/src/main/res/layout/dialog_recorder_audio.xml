<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/zxczxcz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="22dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Record Audio"/>

    <EditText
        android:id="@+id/dialog_et_name"
        android:layout_below="@+id/zxczxcz"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="Enter name record"/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@+id/dialog_et_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="40dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dialog_bt_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Record"
            />

        <Button
            android:id="@+id/dialog_bt_stop"
            android:layout_toRightOf="@+id/dialog_bt_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:text="Stop"
            />

        <Button
            android:id="@+id/dialog_bt_play"
            android:layout_toRightOf="@+id/dialog_bt_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play"
            />

    </RelativeLayout>





</RelativeLayout>